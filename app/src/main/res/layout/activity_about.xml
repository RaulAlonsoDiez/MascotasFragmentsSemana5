<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alonsodiez.mascotaspracticasemana5.ActivityAbout">

    <include
        layout="@layout/actionbar"
        android:id="@+id/miActionBar"
        ></include>

    <LinearLayout
        android:layout_marginTop="@dimen/margenesp"
        android:layout_marginLeft="@dimen/margenesp"
        android:layout_marginRight="@dimen/margenesp"
        android:id="@+id/area_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/miActionBar">
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:layout_row="2"
            android:src="@drawable/user" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Raul Alonso"
            android:textSize="@dimen/tipo_mascota"
            android:textColor="@color/colorPrimaryText"
            android:textStyle="bold"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/margenesp"
        android:layout_marginLeft="@dimen/margenesp"
        android:layout_marginRight="@dimen/margenesp"
        android:id="@+id/area_telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/area_nombre">
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_telefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:layout_row="2"
            android:src="@drawable/phone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="+34666777888"
            android:textSize="@dimen/tipo_mascota"
            android:textColor="@color/colorPrimaryText"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/margenesp"
        android:layout_marginLeft="@dimen/margenesp"
        android:layout_marginRight="@dimen/margenesp"
        android:id="@+id/area_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/area_telefono">
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:layout_row="2"
            android:src="@drawable/message" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="email_prueba@gmail.com"
            android:textSize="@dimen/tipo_mascota"
            android:textColor="@color/colorPrimaryText"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/margenesp"
        android:layout_marginLeft="@dimen/margenesp"
        android:layout_marginRight="@dimen/margenesp"
        android:id="@+id/area_biografia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/area_email">
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_biografia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:layout_row="2"
            android:src="@drawable/contactcard" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Biografia del autor de este desarrollo..."
            android:textSize="@dimen/tipo_mascota"
            android:textColor="@color/colorPrimaryText"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            />
    </LinearLayout>
</RelativeLayout>
